#:kivy 2.0.0


<Game_Window>:
    cols: 2
    on_reveal_list:
        root.reveal_verses()
    MDRectangleFlatButton:
        text: "Start Game"
        size_hint: (1, 1)
        font_size: 50
        #on_press: root.start_game()
        on_press:
            app.root.ids.gamewindowid.start_game()

<VerseTile>:

    MDRectangleFlatButton:
        id: verse_button
        text: root.verse_num
        size_hint: (1, 1)
        pos_hint: {'x': 0, 'y': 0}
        opacity: 1
        on_press:
            root.reveal()
            #self.opacity = 0
            #verse_label.opacity = 1

    MDLabel:
        id: verse_label
        text: root.verse_text
        size_hint: (1, 1)
        pos_hint: {'x': 0, 'y': 0}
        theme_text_color: "Primary"
        valign: "middle"
        padding: 20, 0
        opacity: 0
        revealed: False
        matched: False
        #on_opacity:
        #    app.root.ids.gamewindowid.reveal_list.append(self.text)


<ContentNavigationDrawer>:

    ScrollView:

        MDList:

            OneLineListItem:
                text: "Home"
                on_press:
                    root.nav_drawer.set_state("close")
                    root.screen_manager.current = "Home_Window"

            OneLineListItem:
                text: "Game Screen"
                on_press:
                    root.nav_drawer.set_state("close")
                    root.screen_manager.current = "Game_Window"

            OneLineListItem:
                text: "Settings"

            OneLineListItem:
                text: "Quit"
                on_press:
                    app.stop()



Screen:

    MDToolbar:
        id: toolbar
        pos_hint: {"top": 1}
        elevation: 10
        title: "Bible Verse Memory Game"
        left_action_items: [["menu", lambda x: nav_drawer.set_state("open")]]


